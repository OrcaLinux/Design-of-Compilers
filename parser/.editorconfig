# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# C++ source files
[*.{cpp,hpp,c,h}]
indent_style = space
indent_size = 4
max_line_length = 80

# Markdown files
[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Makefiles
[Makefile]
indent_style = tab

# Ignore binary files
[*.{exe,dll,so,dylib,o,a,lib}]
binary = true
